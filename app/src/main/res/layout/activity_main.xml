<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Simple Interest Calculator"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"/>
   <EditText
       android:id="@+id/principle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Enter Priciple"
       android:layout_marginHorizontal="30dp"
       android:layout_marginTop="50dp"
       android:layout_below="@+id/lbl"
       android:inputType="number"
       />
    <EditText
        android:id="@+id/time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:hint="Enter Time"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/principle"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Rate"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/time1"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/lblRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="16dp"
        android:text="Simple Interest: "
        android:textStyle="bold"
    />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="30dp"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textStyle="bold"
        android:layout_below="@id/lblRes"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="200dp"
        android:backgroundTintMode="add"
        android:textColor="@color/colorPrimary"
        />
    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textStyle="bold"
        android:layout_below="@id/lblRes"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:backgroundTintMode="add"
        android:textColor="@color/colorAccent"

        />



</RelativeLayout>